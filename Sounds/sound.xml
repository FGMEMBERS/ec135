<?xml version="1.0"?>
<!--
	Thanks to George Arana from  Rotor Spider Developement Group! He gave the permission to use the "EC 135 New Sound package"
-->

<PropertyList>
	<fx>
		<!-- inside -->
		<engine>
			<name>turbine-start-inside</name>
			<mode>once</mode>
			<path>Aircraft/ec135/Sounds/ec135_turbine_strt_in.wav</path>
			<condition>
				<and>
					<equals>
						<property>sim/model/ec135/state</property>
						<value>1</value>
					</equals>
					<equals>
						<property>sim/current-view/view-number</property>
						<value>0</value>
					</equals>
				</and>
			</condition>
			<volume>
				<factor>1</factor>
			</volume>
		</engine>

		<engine>
			<name>turbine-loop-inside</name>
			<mode>looped</mode>
			<path>Aircraft/ec135/Sounds/ec135_turbine_idle_in.wav</path>
			<condition>
				<and>
					<equals>
						<property>sim/model/ec135/state</property>
						<value>2</value>
					</equals>
					<equals>
						<property>sim/current-view/view-number</property>
						<value>0</value>
					</equals>
				</and>
			</condition>
			<volume>
				<factor>1</factor>
			</volume>
		</engine>

		<engine>
			<name>turbine-shutdown-inside</name>
			<mode>once</mode>
			<path>Aircraft/ec135/Sounds/ec135_shut_ec_in.wav</path>
			<condition>
				<and>
					<equals>
						<property>sim/model/ec135/state</property>
						<value>3</value>
					</equals>
					<equals>
						<property>sim/current-view/view-number</property>
						<value>0</value>
					</equals>
				</and>
			</condition>
			<volume>
				<factor>1</factor>
			</volume>
		</engine>



		<!-- outside -->
		<engine>
			<name>turbine-start-outside</name>
			<mode>once</mode>
			<path>Aircraft/ec135/Sounds/ec135_turbine_strt_out.wav</path>
			<condition>
				<and>
					<equals>
						<property>sim/model/ec135/state</property>
						<value>1</value>
					</equals>
					<not>
						<equals>
							<property>sim/current-view/view-number</property>
							<value>1</value>
						</equals>
					</not>
				</and>
			</condition>
			<volume>
				<factor>1</factor>
			</volume>
		</engine>

		<engine>
			<name>turbine-loop-outside</name>
			<mode>looped</mode>
			<path>Aircraft/ec135/Sounds/ec135_turbine_idle_out.wav</path>
			<condition>
				<and>
					<equals>
						<property>sim/model/ec135/state</property>
						<value>1</value>
					</equals>
					<not>
						<equals>
							<property>sim/current-view/view-number</property>
							<value>0</value>
						</equals>
					</not>
				</and>
			</condition>
			<volume>
				<factor>1</factor>
			</volume>
		</engine>

		<engine>
			<name>turbine-shutdown-outside</name>
			<mode>once</mode>
			<path>Aircraft/ec135/Sounds/ec135_shut_ec_out.wav</path>
			<condition>
				<and>
					<equals>
						<property>sim/model/ec135/state</property>
						<value>3</value>
					</equals>
					<not>
						<equals>
							<property>sim/current-view/view-number</property>
							<value>0</value>
						</equals>
					</not>
				</and>
			</condition>
			<volume>
				<factor>1</factor>
			</volume>
		</engine>
    
    



		<!-- rotor -->
		<rotor>
			<name>rotor</name>
			<mode>looped</mode>
			<path>Aircraft/ec135/Sounds/ec135_rotor_out.wav</path>
			<condition>
				<and>
					<greater-than>
						<property>rotors/main/rpm</property>
						<value>50</value>
					</greater-than>
					<not>
						<property>sim/crashed</property>
					</not>
				</and>
			</condition>
			<volume>
				<property>rotors/main/rpm</property>
				<factor>0.01</factor>
				<max>0.2</max>
			</volume>
			<pitch>
				<property>rotors/main/rpm</property>
				<factor>0.003</factor>
				<offset>-0.2</offset>
				<max>1.5</max>
			</pitch>
		</rotor>


   
    		<rotor>
			<name>stall</name>
			<mode>looped</mode>
			<path>Aircraft/ec135/Sounds/ec135_rotor_out.wav</path>
			<condition>
				<and>
					<greater-than>
						<property>rotors/main/rpm</property>
						<value>50</value>
					</greater-than>
					<not>
						<property>sim/crashed</property>
					</not>
				</and>
			</condition>
			<volume>
				<property>rotors/main/stall-filtered</property>
				<factor>60</factor>
				<max>1.0</max>
			</volume>
			<pitch>
				<property>rotors/main/rpm</property>
				<factor>0.002262</factor>
				<offset>0</offset>
				<max>1.75</max>
			</pitch>
		</rotor>-->

		<overspeed>
			<name>overspeed</name>
			<mode>looped</mode>
			<path>Sounds/overspeed.wav</path>
			<condition>
				<greater-than>
					<property>velocities/airspeed-kt</property>
					<value>146</value>
				</greater-than>
			</condition>
			<volume>
				<factor>0.2</factor>
			</volume>
			<pitch>
				<factor>0.1</factor>
			</pitch>
			<reference-dist>1.0</reference-dist>
			<max-dist>2.0</max-dist>
		</overspeed>

		<contact>
			<name>ground contact</name>
			<mode>once</mode>
			<path>Aircraft/ec135/Sounds/TC1.wav</path>
			<condition>
				<property>gear/gear[0]/wow</property>
				<property>gear/gear[1]/wow</property>
				<property>gear/gear[2]/wow</property>
				<property>gear/gear[3]/wow</property>
			</condition>
			<volume>
				<factor>0.8</factor>
			</volume>
			<pitch>
				<factor>0.01</factor>
			</pitch>
			<reference-dist>5.0</reference-dist>
			<max-dist>10.0</max-dist>
		</contact>

		<wind>
			<name>wind</name>
			<mode>looped</mode>
			<path>Sounds/wind.wav</path>
			<condition>
				<and>
					<property>velocities/airspeed-kt</property>
					<not>
						<property>sim/crashed</property>
					</not>
				</and>
			</condition>
			<volume>
				<property>position/altitude-ft</property>
				<factor>-0.000015</factor>
				<offset>1.0</offset>
				<min>0.1</min>
				<max>1.0</max>
			</volume>
			<volume>
				<property>velocities/airspeed-kt</property>
				<factor>0.0015</factor>
				<min>0.03</min>
				<max>0.25</max>
			</volume>
			<pitch>
				<property>velocities/airspeed-kt</property>
				<factor>0.01</factor>
				<offset>1.25</offset>
			</pitch>
			<reference-dist>10.0</reference-dist>
			<max-dist>20.0</max-dist>
		</wind>

		<crash>
			<name>intense ground contact</name>
			<mode>once</mode>
			<path>Sounds/crash.wav</path>
			<property>sim/crashed</property>
			<volume>
				<factor>1</factor>
			</volume>
			<pitch>
				<factor>0.1</factor>
			</pitch>
		</crash>



		<door>
			<name>close right frontdoor</name>
			<mode>once</mode>
			<path>Sounds/door_close.wav</path>
			<condition>
				<equals>
					<property>sim/model/door-positions/doors/pilotDoor/position-norm</property>
					<value>0</value>
				</equals>
			</condition>
			<position>
				<x>1.0</x>
				<y>1.5</y>
				<z>-1.5</z>
			</position>
			<volume>
				<factor>1</factor>
			</volume>
		</door>

		<door>
			<name>close left frontdoor</name>
			<mode>once</mode>
			<path>Sounds/door_close.wav</path>
			<condition>
				<equals>
					<property>sim/model/ec135/doors/copilotDoor/position-norm</property>
					<value>0</value>
				</equals>
			</condition>
			<position>
				<x>-1.0</x>
				<y>1.5</y>
				<z>-1.5</z>
			</position>
			<volume>
				<factor>0.5</factor>
			</volume>
		</door>

		<door>
			<name>close right backdoor</name>
			<mode>once</mode>
			<path>Sounds/door_close.wav</path>
			<condition>
				<equals>
					<property>sim/model/ec135/doors/ribackDoor/position-norm</property>
					<value>0</value>
				</equals>
			</condition>
			<position>
				<x>1.0</x>
				<y>1.0</y>
				<z>-1.5</z>
			</position>
			<volume>
				<factor>0.5</factor>
			</volume>
		</door>

		<door>
			<name>close left backdoor</name>
			<mode>once</mode>
			<path>Sounds/door_close.wav</path>
			<condition>
				<equals>
					<property>sim/model/ec135/doors/lebackDoor/position-norm</property>
					<value>0</value>
				</equals>
			</condition>
			<position>
				<x>-1.0</x>
				<y>1.0</y>
				<z>-1.5</z>
			</position>
			<volume>
				<factor>0.5</factor>
			</volume>
		</door>

		<door>
			<name>close right reardoor</name>
			<mode>once</mode>
			<path>Sounds/door_close.wav</path>
			<condition>
				<equals>
					<property>sim/model/ec135/doors/rearDoors/position-norm</property>
					<value>0</value>
				</equals>
			</condition>
			<position>
				<x>0.0</x>
				<y>-1.5</y>
				<z>-1.0</z>
			</position>
			<volume>
				<factor>0.5</factor>
			</volume>
		</door>

		<door>
			<name>close left reardoor</name>
			<mode>once</mode>
			<path>Sounds/door_close.wav</path>
			<condition>
				<equals>
					<property>sim/model/ec135/doors/rearDoors/position-norm</property>
					<value>0</value>
				</equals>
			</condition>
			<position>
				<x>0.0</x>
				<y>-1.5</y>
				<z>-1.0</z>
			</position>
			<volume>
				<factor>0.5</factor>
			</volume>
		</door>
	</fx>
</PropertyList>
