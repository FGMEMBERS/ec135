	   <alpha>1.0</alpha>
	  </transparency>

	  <shininess>10</shininess>
	 </fuselage_color>
   
   <rotorcap_color>
	  <diffuse>
	   <red>1</red>
	   <green>1</green>
	   <blue>1</blue>
	  </diffuse>

	  <ambient>
	   <red>0</red>
	   <green>0</green>
	   <blue>0</blue>
	  </ambient>

	  <specular>
	   <red>1</red>
	   <green>1</green>
	   <blue>1</blue>
