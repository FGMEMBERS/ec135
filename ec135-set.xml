         </tail>
         
         <spant>
          <texture>fuselage.adac.rgb</texture>
         </spant>
         
         <vstab>
          <texture>vstab.adac.rgb</texture>
         </vstab>
         
         <reardoor_re>
          <texture>fuselage.adac.rgb</texture>
         </reardoor_re>
         
         <reardoor_li>
